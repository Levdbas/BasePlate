{
	"name": "projectname",
	"version": "1.0.0",
	"description": "Project short description.",
	"license": "GPL-3.0",
	"main": "app.js",
	"stylelint": {
		"extends": "stylelint-config-standard",
		"plugins": [
			"stylelint-order"
		],
		"rules": {
			"no-empty-source": null,
			"order/order": [
				"custom-properties",
				"declarations"
			],
			"order/properties-alphabetical-order": false,
			"indentation": "tab",
			"string-quotes": "double",
			"no-duplicate-selectors": true,
			"color-hex-case": "lower",
			"color-hex-length": "long",
			"selector-combinator-space-after": "always",
			"selector-attribute-quotes": "always",
			"selector-attribute-operator-space-before": "never",
			"selector-attribute-operator-space-after": "never",
			"selector-attribute-brackets-space-inside": "never",
			"declaration-block-trailing-semicolon": "always",
			"declaration-colon-space-before": "never",
			"max-nesting-depth": 6,
			"declaration-colon-space-after": "always",
			"property-no-vendor-prefix": true,
			"value-no-vendor-prefix": true,
			"number-leading-zero": "always",
			"function-url-quotes": "always",
			"font-weight-notation": "named-where-possible",
			"comment-empty-line-before": "always",
			"at-rule-no-vendor-prefix": true,
			"rule-empty-line-before": "always",
			"selector-pseudo-class-parentheses-space-inside": "always",
			"unit-whitelist": [
				"em",
				"rem",
				"vw",
				"vh",
				"px",
				"%",
				"s",
				"deg"
			],
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"extend",
						"at-root",
						"debug",
						"warn",
						"error",
						"if",
						"else",
						"for",
						"each",
						"while",
						"mixin",
						"include",
						"content",
						"return",
						"function"
					]
				}
			]
		}
	},
	"scripts": {
		"dev": "npm run development",
		"development": "cross-env NODE_ENV=development webpack --progress --hide-modules --config assets/build/webpack.config.js",
		"watch": "cross-env NODE_ENV=development webpack --progress --hide-modules --watch --config assets/build/webpack.config.js",
		"production": "cross-env NODE_ENV=production webpack --progress --hide-modules --config assets/build/webpack.config.js"
	},
	"devDependencies": {
		"autoprefixer": "^9.1",
		"browser-sync": "^2.24",
		"browser-sync-webpack-plugin": "^2.2",
		"buble": "^0.18.0",
		"buble-loader": "^0.4.1",
		"clean-webpack-plugin": "^0.1.7",
		"copy-webpack-plugin": "^4.3.1",
		"cross-env": "^5.1.3",
		"css-loader": "^0.28.7",
		"cssnano": "^3.10.0",
		"exports-loader": "^0.7.0",
		"extract-text-webpack-plugin": "^3.0.2",
		"file-loader": "^1.1.11",
		"imagemin-webpack-plugin": "^2.0.0",
		"node-sass": "^4.7.2",
		"optimize-css-assets-webpack-plugin": "^3.2.0",
		"postcss-loader": "^2.1.1",
		"sass-loader": "^6.0.7",
		"script-loader": "^0.7.2",
		"style-loader": "^0.19.1",
		"uglifyjs-webpack-plugin": "^1.2.4",
		"url-loader": "^0.6.2",
		"webpack": "^3.10.0",
		"webpack-concat-plugin": "^2.4.2",
		"webpack-manifest-plugin": "^2.0.0-rc.1",
		"stylelint": "^9.6",
		"stylelint-order": "^1.0",
		"stylelint-config-standard": "^18.2"
	},
	"dependencies": {
		"bootstrap": "^4.1",
		"font-awesome": "^4.7.0",
		"jquery": "^3.3.1",
		"popper.js": "^1.13.0",
		"lozad": "^1.6"
	}
}
