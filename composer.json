{
    "name": "BasePlate",
    "description": "Great theme for small-medium sized projects for oldschool FTP deploment, featuring top-notch build tools.",
    "license": "MIT",
    "require": {
        "php": "^7.0"
    },
    "config": {
        "preferred-install": "dist"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0.2",
        "roave/security-advisories": "dev-master"
    },
    "require": {},
    "extra": {
        "installer-paths": {
            "../../plugins/{$name}": [
                "type:wordpress-plugin"
            ]
        }
    }
}
